.main-content
  margin-top 23px
  width 790px
  float left

#article-content
  min-height 500px
  float left
  font-size 14px
  padding-left 10px
  background #fff

#article-title
  font-size 20px
  margin 20px 0
  font-weight bold

#article-title h1 img.avatar
  display inline-block
  vertical-align middle
  margin-right 5px

#content-wrapper
  line-height 180%
  padding 0 12px 12px 0

#content-wrapper p
  margin-top .5em
  margin-bottom 1.5em

#content-wrapper h2
  margin-top 15px
  color #888

#content-wrapper img
  max-width 770px
  vertical-align top

@import "../global/src/comment/like-comment-sidebar-panel"
