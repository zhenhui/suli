@import "../variables"

#main-container-wrapper
  min-height 480px

#user-panel
  background #fff
  height 100px
  margin 20px 0
  position relative

#user-panel a.avatar
  position absolute
  left 13px
  top 10px

#user-panel a.avatar img
  border-radius 3px

#user-panel .info
  position absolute
  left 104px
  top 10px

#user-panel .info h2
  font-size 20px

#user-panel .info p
  line-height 190%

#user-panel .count
  position absolute
  right 42px
  top 0
  height 100%
  color #333

#user-panel .count a
  float left
  margin-left 42px
  text-align center
  height 100%
  position relative

#user-panel .count span.num
#user-panel .count span.title
  display block

#user-panel .count span.num
  font-size 35px
  padding-top 6px
  font-weight bold

#user-panel .count span.title
  font-size 20px

#user-panel .count a s
  position absolute
  bottom 0
  left 50%
  margin-left - 11px
  width 22px
  height 3px
  background hover-color
  visibility hidden

#user-panel .count a.active
  color hover-color

#user-panel .count a.active s
  visibility visible

#user-panel .count ahover
  color #333

#user-panel .count ahover s
#user-panel .count a.active s
  visibility visible

/*个人作品*/
#design-works-container
  overflow hidden

#design-works-container .control
  text-align center

#design-works-container .control a
  margin 0 8px

@import "../design-works/design-works-list-inline-block"

#design-works-container ul
  width 1200px

#article-container
  margin 28px 0 0 0

#article-container h2
  font-size: 20px
  margin-bottom: 6px

#article-container h2 img.avatar
  display inline-block
  border-radius 2px
  vertical-align middle
  margin-right 6px

#article-container h2 span.tag
  margin-left 12px
  font-size 12px
  color #999

#article-container h2 span.date
  margin-left 12px
  font-size 12px
  color #999

#article-container p.banner
  margin-bottom 12px

#article-container div.content
  line-height 23px
  font-family simsun, sans-serif
  color #666

#article-container div.article
  margin-bottom: 45px