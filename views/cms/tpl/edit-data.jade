extends ../layout
block content
    form(name="update-source",action="/update-data",method="post")
        input(type="hidden",name="page_id",value="#{docs.page_id}")
        input(type="hidden",name="_csrf",value="#{req.csrfToken()}")
        table(style="display:none")
            tr
                th 页面名称
                td
                    input(type="text",name="page_name",value="#{docs.page_name}")
            tr
                th 页面地址
                td
                    input(type="text",name="page_url",value="#{docs.page_url}",readonly,size="100")
            tr
                th 页面源码
                td
                    textarea(rows="20",name="content",cols="100")=docs.source
    form(action="/save/data",method="post",name="excel")
        #editFormWrapper
        button(type="submit",style="padding:12px;font-size:22px;") 保存数据
block js
    script(src="#{assetsCDN}/s/cms/dist/data/init.js")
    script.
        var cf=!{result}
        seajs.use('sjplus/cms/stable/data/init')
